# Football Events Backend - Environment Configuration

# Database (Required)
DATABASE_URL="postgresql://user:password@localhost:5432/football_events"

# Server Configuration (Required)
PORT=3001
FRONTEND_URL=http://localhost:5173

# Environment
NODE_ENV=development

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# SSL/HTTPS Configuration (Optional - for production)
# Set SSL_ENABLED=true to enable HTTPS
SSL_ENABLED=false

# Paths to SSL certificate files (required when SSL_ENABLED=true)
# SSL_KEY_PATH=./certs/private.key
# SSL_CERT_PATH=./certs/certificate.crt
# SSL_CA_PATH=./certs/ca-bundle.crt

# Force HTTP to HTTPS redirect (production only)
FORCE_HTTPS=false

# JWT Configuration
# JWT_SECRET=your-super-secret-jwt-key-here
# JWT_EXPIRES_IN=15m
# REFRESH_TOKEN_EXPIRES_IN=7d
